# Используем официальный Node.js образ
FROM node:18-alpine AS build

WORKDIR /app

# Копируем package.json и package-lock.json в рабочую директорию
COPY ./vuejs/package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем все остальные файлы проекта в рабочую директорию
COPY ./vuejs/ .

# Строим приложение для продакшн
RUN npm run build

# Устанавливаем рабочую директорию для продакшн сборки
WORKDIR /app/dist

# Открываем порт 3000 для сервера
EXPOSE 3000

# Запускаем сервер для обслуживания статических файлов (понадобится npx serve)
CMD ["npx", "serve", "-s", ".", "-l", "3000"]
